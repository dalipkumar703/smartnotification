{
    "version": "1.0.4",
    "description": "Smart Notification",
    "manifest_version": 3,
    "background": {
        "service_worker": "service-worker.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
      ],
    "name": "Smart Notification",
    "author": "Dalip",
    "action": {
        "default_icon": "icon128.png",
        "icons": {
           "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"
        },
        "default_popup": "index.html",
        "default_title": "Smart Notifications"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "https://www.linkedin.com/"
      ]
}
